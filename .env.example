# Environment Variables for Zigbee2MQTT Docker Compose

# Timezone Configuration
TZ=America/Toronto

# MQTT Broker Settings
MQTT_SERVER=mqtt://mosquitto:1883
MQTT_BASE_TOPIC=zigbee2mqtt

# Zigbee2MQTT Configuration
# Z2M_MQTT_USER and Z2M_MQTT_PASSWORD can be added if authentication is required

# Coordinator Settings
Z2M_COORDINATOR_ADDR=slzb-mrw10u.local
Z2M_COORDINATOR_PORT=7638
Z2M_ADAPTER=zstack
Z2M_BAUDRATE=115200
Z2M_TRANSMIT_POWER=20

# Zigbee Network Configuration
Z2M_CHANNEL=11
Z2M_PAN_ID=GENERATE
Z2M_EXT_PAN_ID=GENERATE
Z2M_TRANSMIT_POWER=5

# Zigbee2MQTT UI Configuration
Z2M_UI_PORT=8080

# Advanced Configuration
Z2M_LOG_LEVEL=info
Z2M_PERMIT_JOIN=false

# Data Persistence
PUID=1000
PGID=1000
DATA_DIR=./zigbee2mqtt/data
CONFIG_DIR=./zigbee2mqtt/config
MOSQUITTO_CONFIG_DIR=./mosquitto/config
MOSQUITTO_DATA_DIR=./mosquitto/data

# Matter & Thread Configuration
MATTER_COORDINATOR_ADDR=slzb-06u.local
MATTER_COORDINATOR_PORT=6638